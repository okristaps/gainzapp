{
  "extends": "expo/tsconfig.base",
  "include": ["src", "types", "app", "custom.d.ts", "constants/colors.ts", "constants/index.ts"],
  "compilerOptions": {
    "strict": true,
    "typeRoots": ["./types"],
    "paths": {
      "components/*": ["./app/components/*"],
      "assets/*": ["./app/assets/*"],
      "tabs/*": ["./app/(tabs)/*"],
      "auth/*": ["./auth/*"],
      "firebaseConfig/*": ["./firebaseConfig.js"],
      "constants/*": ["./constants/*"],
      "api/*": ["./api/*"],
    },
  }
}
